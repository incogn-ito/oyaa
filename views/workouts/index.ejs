<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/workouts/index.css" />
<%- include('../partials/nav') %>

<main>
  <body class="landing-img" style="background-image: url('../img/user-landing.png')">
 
  
  <div class="comic-box">
    <h1>Workout List</h1>
    <h2><a href= "/workouts/new"><button>Add <i class="fa-solid fa-person-running"></i> Workout</button></a></h2>
    <table id="list">
      <thead>
        <tr>
          <th><i class="fa-solid fa-dumbbell"></i></th>
          <th><i class="fa-regular fa-calendar-days"></i></th>
          <th><i class="fa-solid fa-circle-info"></i></th>
          <th><i class="fa-solid fa-delete-left"></i></th>
        </tr>
      </thead>
      <tbody>
        <% workouts.forEach((workout) => { %>
            <tr>
              <td><%= workout.exercise.name %></td>
              <td><%= workout.startDate %></td>
              <td><a href="/workouts/<%= workout._id %>"><i class="fa-solid fa-circle-info"></i></a></td>
              <td>
                <form 
                  action="/workouts/<%= workout._id %>?_method=DELETE" method="POST"
                >
                  <button type="submit"><i class="fa-solid fa-delete-left"></i></button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
  </div>
</main>

<%- include('../partials/footer') %>