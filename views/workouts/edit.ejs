<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>

<body class="landing-img" style="background-image: url('../img/user-landing.png')">

<main class="comic-box">
  <h1><%= title  %></h1>
    <table id="list">
      <% if (user) { %>
        <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST">
        <label for="exercise">Exercise: </label>
          <p><%= workout.exercise.name %></p>
          <label for="exercises-input">Select Exercise: </label>
          <select name="exerciseId">
            <% exercises.forEach(function(exercise) { %>
              <option value="<%= exercise._id %>"><%= exercise.name %></option>
              <% }) %>
            </select>
            <br>
            <label for="calories-burned-input">Calories Burned: </label>
            <input type="text" name="caloriesBurned" id="calories-burned-input">
            <br>
            <label for="duration">Duration: </label>
            <input type="number" name="duration" value="<%= workout.duration %>" id="duration-input">
            <br>
            <label for="workout-date">Workout Date: </label>
          <p><%= workout.startDate %></p>
            <label for="start-date-input">Edit Workout Date: </label>
            <input type="datetime-local" name="startDate" id="start-date-input">
            <br>
            <button type="submit"><i class="fa-solid fa-floppy-disk"></i> Save</button>
          </form>
          <% } %>
        </table>
      </main>
</body>
<%- include("../partials/footer") %>